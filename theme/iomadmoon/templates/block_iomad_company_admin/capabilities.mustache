<h3>{{# str }}restrictcapabilitiesfor, block_iomad_company_admin, {{ title }}{{/ str }}</h3>
<h5>{{# str }}rolename, block_iomad_company_admin, {{ role.name }}{{/ str }}</h5>

<div class="alert alert-warning">{{# str }}iomadcapabilities_boiler, block_iomad_company_admin{{/ str }}</div>

{{# capabilities }}
    <div class="rui-iomadtable row no-gutters pb-3 mb-3 border-bottom">
        <div class="col-6 d-flex flex-wrap">
            <a href="{{{ doclink }}}" class="w-100"><b>{{ name }}</b><a>
            <small>{{ capability }}</small>
        </div>
        <div class="col-6 checkbox">
            <label class="checkbox-inline checkbox-bootstrap checkbox-lg">
                <input class="capabilities-checkbox" type="checkbox" {{# checked }}checked="checked"{{/ checked }} data-capability="{{ capability }}" >
                <span class="checkbox-placeholder"></span>
            </label>    
        </div>
    </div>
{{/ capabilities }}

<div class="mt-5">
    <a class="btn btn-primary" href="{{{ linkurl }}}">{{# str }}listroles, block_iomad_company_admin{{/ str }}</a>
</div>